{% extends 'base.html.twig' %}

{% block title %}Hello RecipeController!{% endblock %}

{% block body %}
    {% set nombre = recipes|length %}
    <h1 align="center">Bienvenu dans la liste des Recettes ({{ nombre }})</h1>
    <div class = "container text-center">
        <div class = "row">
            {% for recipe in recipes %}
                <div class="card max-w-sm col-4 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 my-8 mr-4 bg d-flex justify-content-center align-items-center" data-type="post">
                    <h2><a href={{ path('app_recipe_show', {id : recipe.id, slug : recipe.slug})}}>{{ recipe.title | u.truncate(20,'...',true)}} </a></h2>
                    <img src = {{recipe.imageName}} width="150" height="200">
                    <p>Created {{ recipe.createdAt| ago }}</p>
                </div>        
            {% else %}
                <p>Pas encore de recette</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}


